{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2017"
  },
  "include": [
    "shims-*.d.ts",
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}